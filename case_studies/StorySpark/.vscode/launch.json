{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug pytest: test_api_functions",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${workspaceFolder}/src/api_gateway/tests/test_api_functions.py"
      ],
      "justMyCode": true,
      "cwd": "${workspaceFolder}/src",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Attach to Python Functions",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 9091
      },
      "preLaunchTask": "func: host start"
    }
  ]
}